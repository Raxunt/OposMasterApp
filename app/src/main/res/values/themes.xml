<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OposMasterApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#AD733F</item>
        <item name="colorPrimaryVariant">#FEB06A</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SCREEN">
        <item name="android:background">#FFD5B0</item>
    </style>


    <style name="NUMERO">
        <item name="android:textColor">#AD733F</item>
    </style>

    <style name="NOTAS">
        <item name="android:background">#FFF59A</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#430B5D</item>
    </style>

    <style name="TEXT">
        <item name="android:textColor">#AD733F</item>
        <item name="android:textColorHint">#D8A374</item>
        <item name="android:backgroundTint">#AD733F</item>

    </style>

    <style name="BUTTON">
        <item name="android:backgroundTint">#4E5A55</item>
        <item name="android:textColor">#FFD5B0</item>
        <item name="android:thumbTint">#4E5A55</item>
    </style>

    <style name="BUTTON2">
        <item name="android:backgroundTint">#8C9792</item>
        <item name="android:textColor">#FFD5B0</item>
        <item name="android:thumbTint">#8C9792</item>
    </style>

    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>